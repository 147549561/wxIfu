.container{
  background: #F0F0F0;
  display: block;
  min-height: 100%;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.weui-icon-search, .weui-search-bar__text {
  vertical-align: inherit;
}
.input{
  display: flex;
  font-size: 14px;
  background-color: white;
  height: 40px
}

.text-flow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*实线  */

.line-s {
  width: 100%;
  height: 0;
  border-bottom: #ddd 1px solid;
}

/*虚线  dotted:点状；solid:实线；double:双实线；dashed：虚线*/

.line-x {
  width: 100%;
  height: 0;
  border-bottom: #ddd 1px dashed;
}

/*箭头  */

.ic-next {
  display: flex;
  width: 5px;
  height: 10px;
  vertical-align: middle;
  margin-top: 8px;
}

/*
loading
*/
.loading{ 
 padding: 10rpx; 
 text-align: center; 
} 
.loading:before{ 
 display: inline-block; 
 margin-right: 5rpx; 
 vertical-align: middle; 
 content: ''; 
 width: 40rpx; 
 height: 40rpx; 
 background: url(../../assets/images/ic_hasremark.png) no-repeat; 
 background-size: contain; 
 animation: rotate 1s linear infinite; 
} 
.loading.complete:before{ 
 display: none; 
} 