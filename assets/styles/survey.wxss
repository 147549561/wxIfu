.item-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 10px;
  background: white;
  margin-bottom: 10px;
}

.item-left {
  display: flex;
  flex-direction: column;
  margin-right: 10px;
  vertical-align: middle;
}


.item-right {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 14px;
  width: 50px;
  height: 30px;
  line-height: 30px;
  text-align: center;
}

.item-title {
  font-size: 14px;
  color: black;
}

.item-text {
  font-size: 12px;
  color: #999;
}

.item-bg {
  display: flex;
  padding: 5px 5px 5px 5px;
  background-color: #eaeff9;
  height: 20px;
  vertical-align: middle;
  border-radius: 6px 6px 6px 6px;
}

.item-score-p {
  display: flex;
  flex-direction: raw;
  justify-content: space-between;
  margin-bottom: 10px;
}

.item-link-title {
  display: flex;
  justify-content: flex-start;
  width: 180px;
  font-size: 12px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
