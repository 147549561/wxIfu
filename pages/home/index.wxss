.container {
    background-color: #F2f2f2;
}

.swiper_box {
    width: 100%;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 15px;
    color: #656565;
}


.with_arrow{
  position: relative;
  top: 18px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-image: url(../../images/icon_pressed.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    height: 100%;
    height: 15px;
    padding: 0,0,0,0;
    display: inline-block;
}
.line_flag_right {
    height: 100%;
    height: 15px;
    width:20%;
    margin-left: 20px;
    padding: 0,0,0,0;
    display: inline-block;
    text-align: center;
}
view.text text {
    margin-left: 10px;
    line-height: 18px;
    font-weight: bold;
}

.venues_box {
    padding: 0 10rpx;
}

.venues_item {
    display: inline-block;
    width: 49%;
    margin: 0 0.5%;
}

.venues_item image{
    width: 100%;
    height: 90px;
}

.choice_box {
    padding: 0 10rpx;
}
.choice_box .choice_list .choice_item{
    margin-bottom: 15px;
}
.choice_box .choice_list image {
    width: 100%;
    height: 200px;
}

.choice_box .choice_list .title {
    font-size: 12px;
    font-weight: bold;
    text-align: center;
    color: #333;
}


/*九宫格*/
.row {
    display: flex;
    flex-direction: row;
    flex: 1;
    justify-content: space-around;
    flex-wrap: wrap;
}

.item_size {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 160rpx;
    width: 248rpx;
    margin: 1rpx;
    background: white;
}

.text {
    font-size: 12px;
    align-content: flex-end;
    margin-top: 15rpx;
    margin-bottom: 15rpx
}
.text_num{
  font: 14px;
  color: #FF9933;
}