/* detail.wxss */

.top {
  display: flex;
  height: 50px;
  background: #fff;
  justify-content: space-between;
  align-items: center;
}

.div_left {
  display: -moz-box;
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -moz-box-orient: horizontal;
  -webkit-box-algin: center;
  -moz-box-algin: center;
  -webkit-box-flex: 1;
  -moz-box-flex: 1;
  vertical-align: middle;
  display: flex;
  align-items: center;
  margin: 10px;
  padding: 10px;
  background: white
}

.userinfo-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  vertical-align: middle;
}

.txt_info {
  height: 50px;
  font-size: 0px;
}

.left_text_name {
  display: block;
  font-size: 14px;
  color: black;
}
.left_text_hospital {
  display: block;
  font-size: 12px;
  height: 15px;
  color: black;
}
.txt_new_p{
  margin-left: 20px;
}
.item-p{
  margin-left: 10px;
  vertical-align: middle;
}

.content-title{
  display: block;
  font-size: 16px;
  color: black;
}
.content-text{
  display: block;
  font-size: 14px;
  color: #6e6d6b;
}
.line{
  height: 1px;
  display: block;
  background-color: greenyellow;
}
.record-text{
  display: block;
  padding: 5px;
}